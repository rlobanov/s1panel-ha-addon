{
   "listen": "0.0.0.0:8686",
   "theme": "themes/simple_demo/portrait_simple.json",
   "poll": 3000,
   "refresh": 1600,
   "heartbeat": 60000,
   "debug_update": false,
   "theme_list": [
      {
         "name": "a simple demo portrait orientation",
         "config": "themes/simple_demo/portrait_simple.json"
      }
   ],
   "sensors": [
      {
         "module": "sensors/cpu_usage.js",
         "config": {
            "max_points": 60,
            "rate": 3000
         }
      },
      {
         "module": "sensors/cpu_temp.js",
         "config": {
            "max_points": 60,
            "fahrenheit": false,
            "rate": 5000
         }
      },
      {
         "module": "sensors/cpu_power.js",
         "config": {
            "max_points": 60,
            "rate": 5000
         }
      },
      {
         "module": "sensors/network.js",
         "config": {
            "interface": "enp2s0",
            "max_points": 60,
            "rate": 3000
         }
      },
      {
         "module": "sensors/memory.js",
         "config": {
            "max_points": 60,
            "rate": 3000
         }
      },
      {
         "module": "sensors/space.js",
         "config": {
            "name": "root",
            "mount_point": "/",
            "max_points": 60,
            "rate": 10000
         }
      }
   ],
   "widgets": [
      "widgets/text.js",
      "widgets/custom_bar.js",
      "widgets/line_chart.js",
      "widgets/doughnut_chart.js",
      "widgets/bar_chart.js",
      "widgets/image.js",
      "widgets/iconify.js"
    ],
   "canvas": {
      "width": 320,
      "height": 170,
      "pixel": "RGB16_565"
   },
   "device": "1-8:1.1",
   "led_config": {
      "device": "/dev/ttyUSB0",
      "theme": 2,
      "speed": 3,
      "intensity": 3
   },
   "portrait": true
}